<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#023553"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#00ccff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ccff"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wybierz samochód: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                />

            <RadioGroup
                android:id="@+id/carRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/sedan_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:padding="10dp"
                    android:text="Sedan"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/suv_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:padding="10dp"
                    android:text="Suv" />

                <RadioButton
                    android:id="@+id/hatchback_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:padding="10dp"
                    android:text="Hatchback" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodatkowe wyposarzenie : "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/CheckBoxAirConditioning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klimatyzacja"
                    android:layout_margin="10dp"
                    />
                <CheckBox
                    android:id="@+id/CheckBoxLeatherSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skórzane siedznie"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/orderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Złóż zamowienie"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carOrder"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:padding="10dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coffyImigeView"
                android:layout_gravity="center"
                android:src="@drawable/sedan"
                />
        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>